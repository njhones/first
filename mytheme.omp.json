{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}(Admin) {{end}}{{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "",
          "powerline_symbol": "",
          "foreground": "#fff",
          "background": "#003543",
          "properties": {
            "prefix": ""
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "invert_powerline": false,
          "powerline_symbol": "\uE0B0",
          "foreground": "#fff",
          "background": "#918b8f",
          "properties": {
            "prefix": "<#fff> \uf64f </>"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\uE0C4",
          "foreground": "#fff",
          "background": "#00578d",
          "properties": {
            "prefix": " \uE5FF ",
            "style": "folder",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\uE0C4",
          "foreground": "#193549",
          "background": "#d2ff5e",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "status_colors_enabled": true,
            "display_status": true,
            "local_changes_color": "#ff9248",
            "ahead_and_behind_color": "#f26d50",
            "behind_color": "#f17c37",
            "ahead_color": "#89d1dc",
            "stash_count_icon": "\uF692 "
          }
        },
        {
          "type": "dotnet",
          "style": "powerline",
          "powerline_symbol": "\uE0C4",
          "foreground": "#ffffff",
          "background": "#0184bc",
          "properties": {
            "prefix": " îœŒ "
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\uE0C4",
          "foreground": "#ffffff",
          "background": "#8800dd",
          "properties": {
            "threshold": 1,
            "style": "austin",
            "prefix": " <#fefefe>\ufbab</> "
          }
        },
        {
          "type": "exit",
          "style": "powerline",
          "powerline_symbol": "\uE0B4",
          "foreground": "#242424",
          "background": "#33DD2D",
          "properties": {
            "display_exit_code": false,
            "color_background": true,
            "error_color": "#f1184c",
            "prefix": " \ufc8d"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#007ACC",
          "properties": {
            "prefix": "",
            "text": "\u276F"
          }
        }
      ]
    }
  ]  
}
